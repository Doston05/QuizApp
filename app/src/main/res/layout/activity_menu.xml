<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/empty_level"
    android:padding="16dp"
    android:layout_gravity="center"
    android:id="@+id/level_container1"
    tools:context=".MenuActivity">


    <ImageView
        android:id="@+id/select_level"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/select_level" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:orientation="horizontal"

        android:layout_marginBottom="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/level_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/one" />

        <ImageView
            android:id="@+id/level_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/level_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/level_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/level_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/level_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/level_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/level_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/level_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/lock" />

    </LinearLayout>
    </LinearLayout>
